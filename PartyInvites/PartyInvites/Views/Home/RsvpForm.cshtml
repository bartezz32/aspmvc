@model PartyInvites.Models.GuestResponse

@{
    Layout = null;
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width-device-width"/>
    <link rel="stylesheet" href="~/css/styles.css"/>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>
    <title>RsvpForm</title>
</head>
    <body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>RSVP</h4></div>
        <div class="panel">
            <form class="p-a-1" asp-action="RsvpForm" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Name"> First name and last name</label>
                    <input class="form-control" asp-for="Name"/>
                </div>
                <div class="form-group">
                    <label asp-for="Email"> Email address</label>
                    <input class="form-control" asp-for="Email"/>
                </div>
                <div class="form-group">
                    <label asp-for="Phone">Phone number</label>
                    <input class="form-control" asp-for="Phone"/>
                </div>
                <div class="form-group">
                    <label>Did you come to party?</label>
                    <select class="form-control" asp-for="WillAttend">
                        <option value="">Select as option</option>
                        <option value="True">Yes</option>
                        <option value="False">No</option>
                    </select>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Send RSVP
                    </button>
                </div>
            </form>
        </div>
    </div>
    </body>
</html>